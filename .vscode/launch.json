    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Package",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/${input:pickMicroservice}/cmd",
            "cwd": "${workspaceFolder}/${input:pickMicroservice}"
        }
    ],
    "inputs": [
        {
          "id": "pickMicroservice",
          "description": "microservice name",
          "type": "pickString",
          "options": [
            "auth",
            "gateway",
            "converter"
          ]
        }
    ]
}